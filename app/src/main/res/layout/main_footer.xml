<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_footer"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/main_footer_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/foot_bar_home"
            style="@style/main_footbar_radio"
            android:checked="true"
            android:drawableTop="@drawable/widget_bar_home_bg"
            android:text="首页" />

        <RadioButton
            android:id="@+id/foot_bar_im"
            style="@style/main_footbar_radio"
            android:drawableTop="@drawable/widget_bar_im_bg"
            android:text="清单" />

        <RadioButton
            android:id="@+id/foot_bar_interest"
            style="@style/main_footbar_radio"
            android:drawableTop="@drawable/widget_bar_interest_bg"
            android:text="日常" />

        <RadioButton
            android:id="@+id/main_footbar_user"
            style="@style/main_footbar_radio"
            android:drawableTop="@drawable/widget_bar_user_bg"
            android:text="我的" />

    </RadioGroup>
</LinearLayout>